[Unit]
Description=Raspberry Pi Camera Control Service
After=network.target
Wants=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/camera_control
ExecStart=/usr/bin/python3 /home/pi/camera_control/camera_control.py
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target

